<% if @user.title == "admin" %>
  <div class="homepage-link-container">
    <span class="nice-links"><%= link_to "New Product", new_product_path %></span><br>
  </div>
<%end%>
<div class="homepage-link-container">
  <div class="dropdown">
    <button onclick="showEditMenu()" class="dropbtn">Edit Product</button>
      <div id="editMenuDropdown" class="dropdown-content">
        <% @products.each do |product| %>
        <%= link_to product.name, product_path(id: product.id) %>
        <% end %>
      </div>
  </div>
</div>
