<div class="product-show-container">
<h2><%=@product.name%></h2>
<img class="well" src="<%=@product.image%>"></img>
<ul>
  <%="Stock: #{@product.stock_count}"%><br>
  <%= "Price: $#{@product.price}0" %>
</ul>



<% if admin? %>
  <div class="nav navbar">
    <li><%= link_to 'Edit', edit_product_path %></li>
    <li><%=link_to 'Delete', product_path, method: :delete, data: { confirm: "Delete #{@product.name}?"}%></li>
<%end%>
    <li><%= link_to 'Back', root_path %></li>
  </div>
</div>
